{
  "name": "beacon-tool-cli",
  "version": "1.0.4",
  "description": "CLI to beacon-tool.",
  "main": "index.js",
  "bin": {
    "bt": "./index.js"
  },
  "engines": {
    "node": ">=8.11.3"
  },
  "scripts": {
    "start": "node index.js",
    "test": "mocha --recursive \"./{,!(node_modules)/**/}*.test.js\"",
    "tdd": "mocha --recursive --watch \"./{,!(node_modules)/**/}*.test.js\"",
    "lint": "eslint -c .eslintrc.json './{,!(node_modules)/**/*.js}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haensl/beacon-tool-cli.git"
  },
  "keywords": [
    "beaconing",
    "beacon",
    "bluetooth",
    "tool",
    "ibeacon",
    "altbeacon",
    "eddystone",
    "tools"
  ],
  "author": {
    "name": "HP Dietz",
    "email": "h.p.dietz@gmail.com",
    "twitter": "@h_p_d",
    "url": "https://hpdietz.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haensl/beacon-tool-cli/issues"
  },
  "homepage": "https://github.com/haensl/beacon-tool-cli#readme",
  "dependencies": {
    "beacon-tool": "^1.1.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "mocha": "^8.2.1",
    "yargs": "^16.2.0"
  }
}
